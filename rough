                                {/* Event Title */}
                                <div className="row">
                                    <div className="input-field col s6">
                                        <input id="event" name="event" type="text" className="validate"/>
                                        <label htmlFor="event">Event Title</label>
                                    </div>
                                </div>

                                {/* Date */}
                                <div className="row date">
                                    <div className="input-field col s12">
                                        <DatePicker  name="startDate" onChange={(e) => handleDateChange(e)}/>
                                        <label htmlFor="password">Start Date</label>
                                    </div>

                                    <div className="input-field col s12">
                                        <DatePicker  name="endDate" onChange={(e) => handleDateChange(e)}/>
